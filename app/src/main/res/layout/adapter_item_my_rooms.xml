<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Room Name"
        android:id="@+id/roomSummaryAdapter_roomName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jan 1 00:00"
        android:textColor="#FFAAAAAA"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/roomSummaryAdapter_ts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="100 Users"
        android:textColor="#FFAAAAAA"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_toLeftOf="@id/roomSummaryAdapter_ts"
        android:layout_alignParentTop="true"
        android:id="@+id/roomSummaryAdapter_numUsers"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#FFAAAAAA"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/roomSummaryAdapter_roomName"
        android:id="@+id/roomSummaryAdapter_message"/>
</RelativeLayout>