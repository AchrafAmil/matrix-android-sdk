<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.matrix.matrixandroidsdk.HomeActivity">

    <TextView
        android:id="@+id/textView_static_myRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/my_rooms" />

    <LinearLayout
        android:id="@+id/layoutLinear_createRoomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_newPrivateRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/private_room"/>

        <Button
            android:id="@+id/button_newPublicRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/public_room"/>

    </LinearLayout>



    <TextView
        android:id="@+id/textView_static_createRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutLinear_createRoomType"
        android:textStyle="bold"
        android:text="@string/create" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_myRooms"
        android:layout_below="@id/textView_static_myRooms"
        android:layout_above="@id/textView_static_createRoom"
        android:layout_centerVertical="true"/>



</RelativeLayout>
